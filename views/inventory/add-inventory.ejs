<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
   <li><%= error.type %></li>
   <li><%= error.value %></li>
   <li><%= error.path %></li>
<%  }) %>
 </ul>
<% } %>
<%- messages() %>
<form action="/inventory/add-inventory" class="wf1" method="post">
    <fieldset>
        <legend>Add a New Inventory</legend>
        <span>All fields are required.</span>
        <label> <%- dropdown%></label>
        <label>Make
        <input type="text" name="inv_make" id="inv_make" pattern="^[a-zA-Z]{2,15}$" placeholder="Min 3 characters" required></label>
        <label>Model
        <input type="text" name="inv_model" id="inv_model" pattern="^[a-zA-Z|0-9]{2,15}$" placeholder="Min 3 characters" required></label>
        <label>Description
        <input type="textarea" name="inv_description" id="inv_description" pattern="^[a-zA-Z]+(.|\s)*{2,15}$" placeholder="Min 3 characters" required></label>
        </label>
        <label>Image Path: 
        <input type="text" name="inv_image" id="inv_image" value="/images/vehicles/no-image.png" placeholder="Classification Name" required></label>
        <label>Thumbnail Path: 
        <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="/images/vehicles/no-image.png" placeholder="Classification Name" required></label>
        <lable>Price
        <input type="text" name="inv_price" id="inv_price" pattern="^[^,a-zA-Z]+[0-9\.0-9]{1,7}$" placeholder="decimal or integer" required></label>
        <lable>Year
        <input type="text" name="inv_year" id="inv_year" pattern="^[0-9]{4}$" placeholder="4-digit year" required></label>
        <label>Miles
        <input type="text" name="inv_miles" id="inv_miles" pattern="^[0-9]{1,6}$" placeholder="digits only" required></label>
        <label>Color
        <input type="text" name="inv_color" id="inv_color" pattern="^[a-zA-Z]{1,15}$" placeholder="" required></label>
        </label>
    </fieldset>
    <input type="submit" name="submit" value="Register new Inventory">
</form>